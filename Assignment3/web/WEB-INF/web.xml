<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <servlet>
        <servlet-name>LoadProductSheet</servlet-name>
        <servlet-class>ProductRouting.LoadProductSheet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>AddProductToFile</servlet-name>
        <servlet-class>ProductRouting.AddProductToFile</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>EditProduct</servlet-name>
        <servlet-class>ProductRouting.EditProduct</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ApplyEdits</servlet-name>
        <servlet-class>ProductRouting.ApplyEdits</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>DeleteProduct</servlet-name>
        <servlet-class>ProductRouting.DeleteProduct</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>LoadProductSheet</servlet-name>
        <url-pattern>/LoadProductSheet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>AddProductToFile</servlet-name>
        <url-pattern>/AddProductToFile</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>EditProduct</servlet-name>
        <url-pattern>/EditProduct</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ApplyEdits</servlet-name>
        <url-pattern>/ApplyEdits</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>DeleteProduct</servlet-name>
        <url-pattern>/DeleteProduct</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
</web-app>
